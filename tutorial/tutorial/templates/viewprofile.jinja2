{% extends 'home_layout.jinja2' %}
{% block content %}
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
	<div class="container">
		<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			Menu
			<i class="fa fa-bars"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav ml-auto">
				
				<form action="/home" method="post">
	            <input type="submit" value="home">
				</form>
				<li class="nav-item">
					<a class="nav-link" href="/logout">logout</a>
				</li>
			</ul>
		</div>
	</div>
</nav>
<!-- Page Header -->
<header class="masthead" style="background-image: url('{{request.static_url('tutorial:static/homelayout/img/about-bg.jpg')}}">
	<div class="overlay"></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<div class="site-heading">
					<h1> {{username.username}}'s profile</h1>
				</div>
			</div>
		</div>
	</div>
</header>
<div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {% for blog in allblog %}
          <div class="post-preview">
 
              <p class="post-title">
                {{ blog.blog}}
              </p>
            <p class="post-meta">Posted by
  
              {{blog.friend_name}}</p>
          </div>
          <hr>
          {% endfor %}
          <!-- Pager -->
          <div class="clearfix">
          </div>
        </div>
      </div>
    </div>
{% if selectname %}
<form action="storeblog">
	<div class="form-group">
    	<label for="exampleFormControlTextarea2">Enter Blog</label>
   	 	<textarea class="form-control rounded-0" required="required" id="exampleFormControlTextarea2" rows="3" name="textarea"></textarea>
   	 	<input type="hidden" value="{{username.id}}"  name="friendid">
		<input type="hidden" value="{{myid}}"  name="myid">
   	 	<input type="submit" name="submit">
   	 	</form>
	</div>
<form action="/deletefriend" method="post">
					<input type="hidden" value="{{username.username}}"  name="friendname">
					<input  type="submit" value="unfriend"></form>
{% endif %}


{% endblock %}