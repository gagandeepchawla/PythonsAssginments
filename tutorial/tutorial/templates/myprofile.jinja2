{% extends 'home_layout.jinja2' %}
{% block content %}
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
	<div class="container">
		<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			Menu
			<i class="fa fa-bars"></i>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav ml-auto">
				<form action="/home" method="post">
	            <input type="submit" value="home">
				</form>
					
				<li class="nav-item">
					<a class="nav-link" href="/logout">logout</a>
				</li>
			</ul>
		</div>
	</div>
</nav>
<!-- Page Header -->
<header class="masthead" style="background-image: url('{{request.static_url('tutorial:static/homelayout/img/contact-bg.jpg')}}">
	<div class="overlay"></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<div class="site-heading">
					<h1>Welcome {{myusername}}</h1>
				</div>
			</div>
		</div>
	</div>
</header>
<!-- Main Content -->
<div class="container">
	<div class="row">

		{% for user in select  %}
		<div class="col-lg-8 col-md-10 mx-auto">
			<div class="post-preview">
				<a href="#">
					<h2 class="post-title">
						{{ user.username}}
					</h2>
				</a>
				<form action="/deletefriend" method="post">
					<input type="hidden" value="{{user.username}}"  name="friendname">
					<input  type="submit" value="unfriend"></form>
				
				<form action="/myviewprofile" >
					<input type="hidden" value="{{user.id}}"  name="friendid">
					<input type="hidden" value="{{ myid }}"  name="myid">
					<input  type="submit" value="View Profile">
				</form>

				</div>
				<hr>
				<!-- Pager -->
				<div class="clearfix">
				</div>
			</div>
			{% endfor %}

		</div>
	</div>
	<hr>
	{% endblock %}